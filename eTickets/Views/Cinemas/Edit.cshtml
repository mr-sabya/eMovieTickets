@model Cinema

@{
    ViewData["Title"] = "Edit " + @Model.Name;
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h2>Edit @Model.Name</h2>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group text-center">
                        <img id="LogoPreview" style="width: 200px" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Logo" class="form-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success float-end">Update</button>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("LogoPreview");
            output.src = $('#Logo').val();
        })

        $('#Logo').on("blur", function () {
            var output = document.getElementById("LogoPreview");
            output.src = $(this).val();
        })
    </script>
}